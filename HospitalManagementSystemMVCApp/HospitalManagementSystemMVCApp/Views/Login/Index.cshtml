@model HospitalManagementSystemMVCApp.Models.logintable
@{    ViewBag.Title = "Index";
}


<div class="col-lg-12" >
    <div class="col-lg-3" ></div>
    <div class="col-lg-6" style="height:500px;">
           
     
        <div class="container-fluid" style="width:500px;height:350px;background-color:white;margin-top:80px;">

            <div class="row col-lg-12">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="col-lg-12" style="margin-top:40px;margin-left:10px;">
                        <h2 style="align-content:center; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;color:black; font-size:60px">Login</h2><br />
                    </div>
                        <div class="col-lg-12" style="margin-top:30px;">
                         
                                <input class="form-control" type="text" placeholder="Username" name="Username" style="text-align:center;color:black;margin-left:80px;" />
                              @*  @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger col-lg-12" })*@
       
                                </div>
                        <div class="col-lg-12" style="margin-top:30px;">
                         
                            <input class="form-control" style="margin-left:80px;margin-bottom:40px;text-align:center" placeholder="Password" type="password" name="Password" />
                            @*@Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger col-lg-12" })*@


                        </div>
                    <div class="col-lg-12" style="">
                        <input class="btn btn-default btn-lg" type="submit" name="Login" style="margin-left:30px;color:black;vertical-align:central;width:240px;" value="Login" />
                    </div>

                }
            </div>
            </div>
    </div>
    <div class="col-lg-3"></div>
</div>
