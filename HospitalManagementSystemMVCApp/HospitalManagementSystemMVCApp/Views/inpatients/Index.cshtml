@model IEnumerable<HospitalManagementSystemMVCApp.Models.inpatient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.patient_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.admission_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.doctor_assigned)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.disease)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.room_assigned)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.patient_id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.admission_date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.doctor_assigned)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.disease)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.room_assigned)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.patient_id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.patient_id })
    </td>
</tr>
}

</table>
